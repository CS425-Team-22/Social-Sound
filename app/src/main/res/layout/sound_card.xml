<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="3dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageViewTrackImage2"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:background="@color/black"
            android:padding="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/social_sound_icon" />

        <TextView
            android:id="@+id/textViewTrackName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:maxLength="28"
            android:text="TrackName"
            android:textColor="@color/blue"
            android:textColorLink="@color/blue"
            app:layout_constraintStart_toEndOf="@+id/imageViewTrackImage2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewTrackAlbum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="TrackAlbum"
            android:textColor="@color/blue"
            android:maxLength="28"
            app:layout_constraintStart_toEndOf="@+id/imageViewTrackImage2"
            app:layout_constraintTop_toBottomOf="@+id/textViewTrackArtist2" />

        <TextView
            android:id="@+id/textViewTrackArtist2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="TrackArtist"
            android:textColor="@color/blue"
            android:maxLength="28"
            app:layout_constraintStart_toEndOf="@+id/imageViewTrackImage2"
            app:layout_constraintTop_toBottomOf="@+id/textViewTrackName2" />

        <TextView
            android:id="@+id/textViewUsername2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Username"
            android:textColor="@color/blue"
            android:maxLength="28"
            app:layout_constraintStart_toEndOf="@+id/imageViewTrackImage2"
            app:layout_constraintTop_toBottomOf="@+id/textViewTrackAlbum2" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewSoundsProfilePicture"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:src="@drawable/ic_launcher_foreground"
            app:civ_border_color="#00000000"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>